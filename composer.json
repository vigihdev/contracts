{
    "name": "vigihdev/contracts",
    "description": "Standard interfaces and contracts for VigihDev ecosystem - promoting loose coupling and framework-agnostic design",
    "type": "library",
    "keywords": [
        "contracts",
        "interfaces",
        "vigihdev",
        "php",
        "ddd",
        "domain-driven-design",
        "solid-principles",
        "dependency-injection",
        "framework-agnostic"
    ],
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Vigih Dev",
            "email": "vigihdev@gmail.com",
            "role": "developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "Vigihdev\\Contracts\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vigihdev\\Contracts\\Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0
    },
    "require-dev": {
        "phpunit/phpunit": "10.5.x-dev",
        "vigihdev/serializer": "dev-main",
        "vigihdev/symfony-bridge-config": "^1.0"
    },
    "scripts": {
        "test": "phpunit",
        "server": "php -S localhost:1834 server.php"
    }
}